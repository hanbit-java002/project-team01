{{set root="."}}
{{set pageId="index"}}
{{>header title="메인" cssName="main"}}
<section class="main-img-area">
	<div class="main-img-dark"></div>
	<img src="{{root}}/img/main_img_01.jpg" class="main-img">
	<div class="view-details">
		<!--해당 img 상품의 상세페이지 URL-->
		<a href="#">
			View Details
			<div class="fa fa-angle-double-right"></div>
		</a>
	</div>
</section>
<section class="main-img-rolling-area">
	<div class="slide-arrow fa fa-chevron-circle-left"></div>
	<div class="img-text">
		<div class="product-name">
			NIKE JORDAN
		</div>
		<div class="release-date">
			2017 / 04 / 22 Sat
		</div>
	</div>
	<div class="slide-arrow fa fa-chevron-circle-right"></div>
</section>
<section class="title market-title">
	<span>Market</span>
</section>
<section class="menu-category">
	<ul>
		<li menu-category-detail="brand-all" class="active">
			ALL
		</li>
		<li menu-category-detail="brand-palace">
			PALACE
		</li>
		<li menu-category-detail="brand-nike">
			NIKE
		</li>
		<li menu-category-detail="brand-supreme">
			SUPREME
		</li>
	</ul>
</section>
<section class="contents-wrapper">
	<section class="product-view">
		<div>
			<ul>
				<li class="product-list">
					<div class="product-img" style="background-image: url('{{root}}/img/shoes.jpg')"></div>
					<div class="product-detail">
						<div class="product-name">컨버스 네이버후드</div>
						<div class="product-price"><i class="fa fa-krw"></i><span>260,000</span></div>
						<ul>
							<li class="product-size">Size<span>260</span></li>
							<li class="product-quality">Quality<span>8</span></li>
						</ul>
						<div class="seller-name">
							Seller <span>욱이님</span>
						</div>
					</div>
					<div class="product-like">
						<i class="fa fa-heart"><span>찜</span></i>
					</div>
				</li>
			</ul>
		</div>
	</section>
</section>
<section class="view-more">
	<div class="view-more-text">
		더 많은 상품 보기
	</div>
	<div class="fa fa-angle-double-right"></div>
</section>
{{>footer jsName="main"}}
