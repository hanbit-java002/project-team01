{{set root=".."}}
{{>header title="마켓" cssName="market"}}
<section class="title market-title">
	<span>Market</span>
</section>
<section class="menu-category">
	<ul>
		<li menu-category-detail="all">
			ALL
		</li>
		<li menu-category-detail="palace">
			PALACE
		</li>
		<li menu-category-detail="nike" class="active">
			NIKE
		</li>
		<li menu-category-detail="supreme">
			SUPREME
		</li>
	</ul>
</section>

<section class="contents-wrapper">
	<section class="filter">
		<ul>
			<ul>
				<li class="filter-search active">
					<input type="text" class="form-control filter-search-box" placeholder="검색">
					<i class="fa fa-search"></i>
				</li>
				<li class="filter-series active">
					Series
					<i class="glyphicon glyphicon-th-large"></i>
				</li>
			</ul>
			<ul class="filter-dropdown">
				<li>
					<select class="form-control category-select">
						<option>상의</option>
						<option>하의</option>
						<option>신발</option>
						<option>잡화</option>
					</select>
				</li>
				<li>
					<select class="form-control size-select">
						<option value="default" selected>사이즈선택</option>
						<option value="size-230" >230이하</option>
						<option value="size-240">240</option>
						<option value="size-250">250</option>
						<option value="size-260">260</option>
						<option value="size-270">270</option>
						<option value="size-280">280</option>
						<option value="size-290">290</option>
						<option value="size-300">300이상</option>
					</select>
				</li>
				<li>
					<select class="form-control quality-select">
						<option>중고</option>
						<option>새제품</option>
					</select>
				</li>
			</ul>
		</ul>
	</section>
	<section class="product-view">
		<div class="product-view-bar">
			<div class="main-product-name active">
				NAME
			</div>
			<ul class="product-price-order">
				<li class="price-low active">
					Low Price
				</li>
				<li class="price-high">
					High Price
				</li>
			</ul>
		</div>

		<div>
			<ul>
				<li class="product-list">
					<div class="product-img" style="background-image: url('{{root}}/img/shoes.jpg')"></div>
					<div class="product-detail">
						<div class="product-name">컨버스 네이버후드</div>
						<div class="product-price"><i class="fa fa-krw"></i><span>260,000</span></div>
						<ul>
							<li class="product-size"><span>260</span>mm</li>
							<li class="product-quality"><span>새상품</span></li>
						</ul>
						<div class="seller-name">
							Seller <span>욱이님</span>
						</div>
					</div>
					<div class="product-like">
						<i class="fa fa-heart"><span>찜</span></i>
					</div>
				</li>
			</ul>
		</div>
	</section>
	<section class="more">
		<span>More</span><i class="glyphicon glyphicon-chevron-down"></i>
	</section>
	<section class="write-btn list-more">
		<i class="fa fa-pencil"></i>
	</section>

</section>
