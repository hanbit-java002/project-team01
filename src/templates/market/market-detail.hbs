		</ol>
		<!-- Wrapper for slides -->
		<div class="carousel-inner" role="listbox">
			<div class="item active">
				<img src='{{root}}/img/product_img_01.jpg'>
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src='{{root}}/img/product_img_02.jpg'>
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src='{{root}}/img/product_img_03.jpg'>
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src='{{root}}/img/product_img_04.jpg'>
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src='{{root}}/img/product_img_05.jpg'>
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src='{{root}}/img/product_img_06.jpg'>
				<div class="carousel-caption">
				</div>
			</div>
		</div>
		<!-- Control-arrows -->
		<a class="left carousel-control" href="#img-layer-carousel" role="button" data-slide="prev">
		<span class="fa fa-angle-left" aria-hidden="true"></span>
		</a>
		<a class="right carousel-control" href="#img-layer-carousel" role="button" data-slide="next">
			<span class="fa fa-angle-right" aria-hidden="true"></span>
		</a>
	</div>
</section>
