<section class="product-img-layer">
	<div class="product-img-layer-header">
		<div class="gallery-title">상품 사진</div>
		<div class="close-icon"></div>
	</div>
	<div id="img-layer-carousel" class="product-img-area carousel slide" data-ride="carousel">
